        android:supportsRtl="true"
        android:theme="@style/Theme.Movil_modelo_proyecto_2022_2"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
               <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".vista.crud.EditorialCrudFormularioActivity" />
        <activity android:name=".vista.crud.EditorialCrudListaActivity" />
        <activity android:name=".vista.registra.EditorialRegistraActivity" />
        <activity android:name=".vista.consulta.EditorialConsultaActivity" />

